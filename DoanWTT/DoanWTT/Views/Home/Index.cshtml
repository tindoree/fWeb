<!-- Product -->
<div class="bg0 m-t-23 p-b-140">
    <div class="container">
        <!-- Product-List -->
        <div class="row isotope-grid">
            @foreach (var item in Model)
            {
                <div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item women">
                    <!-- Block -->
                    <div class="block2">
                        <div class="block2-pic hov-img0">

                            <img src="@item.hinhDD" alt="IMG-PRODUCT">

                        </div>

                        <div class="block2-txt flex-w flex-t p-t-14">
                            <div class="block2-txt-child1 flex-col-l ">
                                <a href="~/Product/Detail/@item.maSP" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                                    @item.tenSP
                                </a>

                                <span class="stext-105 cl3">
                                    @Html.FormatValue(@item.giaBan, "{0:0,0}VND")
                                </span>
                            </div>

                            <div class="block2-txt-child2 flex-r p-t-3">
                                <a href="#" class="btn-addwish-b2 dis-block pos-relative js-addwish-b2">
                                    <img class="icon-heart1 dis-block trans-04" src="/images/icons/icon-heart-01.png" alt="ICON">
                                    <img class="icon-heart2 dis-block trans-04 ab-t-l" src="/images/icons/icon-heart-02.png" alt="ICON">
                                </a>
                            </div>
                        </div>
                        <div class="nn-product-box-actions">
                            <button type="button" title="Add to Cart" class="flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04 add-to-cart" data-id="@item.maSP">
                                <span>Add to cart</span>
                            </button>

                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(function () {
            $(".add-to-cart").click(function () {
                //debugger
                pid = $(this).attr("data-id");
                $.ajax({
                    url: "/Cart/Add",
                    data: { id: pid },
                    success: function (response) {
                        $("#nn-cart-count").html(response.Count);
                        $("#nn-cart-total").html(response.Total);
                    }
                });
            });
        });
    </script>
}